<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FF000000"
    tools:context="fi.fstf.knappen.MainActivity">

    <View
        android:id="@+id/fullScreenTouchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF000000"
    />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#FF333333"
        android:textSize="24sp"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical" android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_weight="0.5"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/cornerTouchView1"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/cornerTouchView2"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_weight="0.5"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/cornerTouchView4"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/cornerTouchView3"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>

    <!--View
        android:id="@+id/cancelMenuTouchView"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        /-->

</RelativeLayout >